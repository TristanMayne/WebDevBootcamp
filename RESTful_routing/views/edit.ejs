<%- include ("partials/header") %> 

<div class = "ui main text container segment">
    <div class = " ui huge header">Edit <%= blog.title %> </div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" class = "ui form" method="POST">
        <div class = field>
            <label>Title</label>
            <input type="text" name="blog[title]" value ="<%= blog.title %> " id="">
        </div>
        <div class = field>
            <label>Image</label>
            <input type="text" name="blog[image]" value ="<%= blog.image %> " id="">
        </div>
        <div class = field>
            <label>Body</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <input class = "ui purple basic button big" type="submit">
    </form>
</div>

<%- include ("partials/footer") %> 