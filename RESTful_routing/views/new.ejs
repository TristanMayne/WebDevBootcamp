
<%- include ("partials/header") %> 

<div class = "ui main text container segment">
    <div class = " ui huge header">New Blog</div>
    <form action="/blogs" class = "ui form" method="POST">
        <div class = field>
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" id="">
        </div>
        <div class = field>
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image" id="">
        </div>
        <div class = field>
            <label>Body</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"></textarea>
        </div>
        <input class = "ui purple basic button big" type="submit">
    </form>
</div>

